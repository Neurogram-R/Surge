#!name=DisneyPlus Dualsub
#!desc=Disney+ bilingual subtitles

[Script]
DisneyPlus-Dualsub = type=http-response,pattern=https:\/\/.+media.dssott.com\/ps01\/disney\/.+(-MAIN.+\.vtt|-all-.+\.m3u8.*),requires-body=1,max-size=0,timeout=30,script-path=https://raw.githubusercontent.com/Neurogram-R/Surge/master/Dualsub.js
DisneyPlus-Dualsub-Setting = type=http-request,pattern=https:\/\/.+media.dssott.com\/ps01\/disney\?action=(get|set),requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Neurogram-R/Surge/master/Dualsub.js
        
[MITM]
hostname = %APPEND% *.media.dssott.com
